CREATE TABLE Autores(
id_Autor INT PRIMARY KEY,
nome VARCHAR(100) NOT NULL,
nacionalidade VARCHAR(100),
);

CREATE TABLE Livros (
id_livro INT PRIMARY KEY,
titulo VARCHAR(100),
ano_publicacao INT,
id_autor INT,
FOREIGN KEY(id_autor) REFERENCES Autores(id_autor),
);

